  <!-- USMC -->
  <div class="flex flex-col p-2 shadow-lg rounded-lg work-history-entry bg-zinc-400 mt-8">
    <div class="flex flex-row gap-2">
      <h2 class="font-medium">Corporal (E-4) Field Artillery @ United States Marine Corps</h2>
      <p class="">Twentynine Palms, CA</p>
    </div>
